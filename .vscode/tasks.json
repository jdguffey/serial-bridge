{
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": false,
		"clear": true,
	},
	"tasks": [
		{
			"label": "Launch server/client",
			"dependsOn": [
				"Launch server",
				"Launch client",
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"runOptions": {
				"runOn": "folderOpen",
			},
		}, {
			"label": "Launch server",
			"type": "shell",
			"command": ". ~/.nvm/nvm.sh && nvm use && yarn server:dev",
			"isBackground": true,
			"presentation": {
				"group": "server-client",
			},
		}, {
			"label": "Launch client",
			"type": "shell",
			"command": "yarn client:dev",
			"isBackground": true,
			"presentation": {
				"group": "server-client",
			},
		}
	]
}
